body.bg-gray-light
  = render "teachers/shared/navbar"
  = render "teachers/shared/sidebar"
  #container.main-content.p-30.tp-t-60.tp-lr-10.active
    button.menu-btn.btn.btn-bordered.text-gray-alt.text-bold.top-left-corner â˜° MENU
    .row
      .col-sm-3.text-center
        .p-10.brad
          .img-circle.profile-pic style="margin:auto;background-image:url('http://www3.di.uminho.pt/~jcr/foto-jcr-xata2006.jpg')"
          div
            div
              .i-block
                h3.m-b-0= @teacher.name
            div
              .text-gray-alt.i-block
                span.m-t-10.d-block= @teacher.email
      .col-sm-9
        .bg-white.p-30.brad.b-bot-2px-gray-light.b-right-1px-gray-light
          .row
            .col-sm-4
              h4= @teacher.status
              p.text-gray-alt
                | Status
              hr
                h4= @teacher.phone
                p.text-gray-alt
                  | Phone
            .col-sm-4
              h4 University of Minho
              p.text-gray-alt
                | Instituition
              hr
                h4 15 years old
                p.text-gray-alt
                  | Born on 
                  = @teacher.birthday.strftime("%d %m %Y")
            .col-sm-4
              h4= @teacher.url
              p.text-gray-alt
                | Website
              hr
                h4 Registed as dapcarvalho
                p.text-gray-alt
                  | Since 22.03.2013
    ul.nav.nav-tabs.nav-profile
      li.active
        a data-toggle="tab" href="#personal"
          .text-small
            | Personal
          span.text-uppercase information
          span.text-gray-dark 
            |  /  
          span.small.text-gray-dark hobbies
      li
        a data-toggle="tab" href="#research"
          .text-small
            | Research
          span.text-uppercase projects
          span.text-gray-dark 
            |  /  
          span.small.text-gray-dark investigation
      li
        a data-toggle="tab" href="#publications"
          .text-small
            | Documents
          span.text-uppercase Publications
      li
        a data-toggle="tab" href="#thesup"
          .text-small
            | Thesis
          span.text-uppercase Supervisions
      li
        a data-toggle="tab" href="#thexam"
          .text-small
            | Thesis
          span.text-uppercase Examinations
      li
        a data-toggle="tab" href="#conf"
          .text-small
            | Conferences
          span.text-uppercase Organization
          span.text-gray-dark
            |  /  
          span.small.text-gray-dark Member
      li
        a data-toggle="tab" href="#teaching"
          .text-small
            | Professor
          span.text-uppercase Theaching
    .bg-white.b-1px-gray-light.b-top-none.brad-bottom.brad-tr.b-bot-2px-gray-light
      .tab-content.profilecontainer
        #personal.tab-pane.active.fade.in.p-30
          h2.font-w-100
            span.text-blue Biography
          p.text-gray-alt
            = @teacher.bio
          hr
          h2.font-w-100
            span.text-blue Academic Degrees 
          - @academicinfo.each do |ai|
            p.text-gray-alt
              span.label.label-info 
                = ai.b_date.year  
                | -
                = ai.e_date.year
              strong = AcademicDegree.find(ai.academic_degree_id).name  
              |  in 
              = Course.find(ai.course_id).name  
              |  @ 
              = Institution.find(Course.find(ai.course_id).institution_id).name
              br/
              blockquote.text-gray-alt.prof = ai.description 
          hr 
          h2.font-w-100
            span.text-blue Hobbies
          - Hobby.where(teacher_id: @teacher.id).each do |hobby|
            span.label.label-success.m-10
              = hobby.activity
        #research.tab-pane.fade.p-30
        #publications.tab-pane.fade.p-30
          h2.font-w-100
            span.text-blue Publications
          - @pub.each do |pub|
            p.text-gray-alt
              strong =pub.title
              |  ;  
              - Author.where(publication_id: pub.id).each do |author|
                = author.name
                | ,   
              | ;
              = pub.publisher
              | ;
              = pub.address
              | ;
              = pub.chapter
              | ;
              = pub.pages
              | ;
              = pub.volume
              | ;
              = pub.isbn
              | ;
              = pub.issn
              | ;
              = pub.booktitle
              | ;
              = pub.journal
              | ;
              = pub.number
              | ;
              = pub.howpublished
              | ;
              = pub.school 
              | ;
              a href="(pub.uri)"
                = pub.uri
            hr
            
        #thesup.tab-pane.fade.p-30
          h2.font-w-100
            span.text-blue Thesis Supervisions
          - @thesup.each do |thesis|
            p
              strong = thesis.thesis.title
              | ; 
              = thesis.thesis.student
              | ; 
              = thesis.thesis.academic_degree.name
              | ; 
              = thesis.thesis.institution.name
              | ; 
              = thesis.description
              | ; 
              a href=(thesis.thesis.url)
                = thesis.thesis.url
            hr 


        #thexam.tab-pane.fade.p-30
          h2.font-w-100
            span.text-blue Thesis Examinations
          - @thexam.each do |thesis|
            p
              |  [  
              = thesis.date.strftime("%Y.%m.%d")
              |  ] 
              strong = thesis.thesis.title
              | ; 
              = thesis.thesis.student
              | ; 
              = thesis.thesis.academic_degree.name
              | ; 
              = thesis.thesis.institution.name
              | ; 
              = thesis.description
              | ; 
              a href=(thesis.thesis.url)
                = thesis.thesis.url
            hr 


        #conf.tab-pane.fade.p-30
        #teaching.tab-pane.fade.p-30
